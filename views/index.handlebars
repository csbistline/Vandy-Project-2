<style>
  .sidebar {
    overflow: auto;
    position: -webkit-sticky left;
    position: sticky;
    top: 5%;
    background-color: rgb(240, 240, 240);
    float: left;
    width: 100%;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  h3,
  h6 {
    font-family: "Orbitron", sans-serif;
  }

  .wrapper {
    display: flex;
    justify-content: space-between;
  }

  .container-fluid {
    margin-top: 56px;
    padding: 0px;
  }

  code,
  pre {
    background-color: #ccc;
    padding: 0 3px;
    border-radius: 5px;
  }

  .bottom {
    justify-self: bottom;
  }
</style>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 offset-md-1"><br>
      <h3>Recently added games</h3>
      <div id="news-feed">
        <table class="table table-sm table-hover" id="games-table">
          <thead>
            <tr>
              <th scope="col">Game name</th>
              <th scope="col">Streams</th>
            </tr>
          </thead>
          <tbody>
            {{#each games}}

            <tr>
              <td>{{this.name}}</td>
              <td><button data-id="{{this.appid}}" data-toggle="modal" data-target="#streamsModal" class="badge badge-primary" onclick="handleStreams(this)">View streams on Twitch</button></td>
            </tr>
            {{/each}}

          </tbody>
        </table>


      </div>
    </div>
  </div>
</div>

<!-- Button trigger modal -->
{{!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#streamsModal">
  Launch demo modal
</button> --}}

<!-- Modal -->
<div class="modal fade" id="streamsModal" tabindex="-1" role="dialog" aria-labelledby="streamsModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="streamsModalLabel">Streams</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="stream-area" class="container row"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>