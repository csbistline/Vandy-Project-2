<style>
  .sidebar {
    overflow: auto;
    position: -webkit-sticky left;
    position: sticky;
    top: 5%;
    background-color: rgb(240, 240, 240);
    float: left;
    width: 100%;
    padding-left: 1rem;
    padding-right: 1rem;
  }

h3, h6 {
      font-family: "Orbitron", sans-serif;
}
  .wrapper {
    display: flex;
    justify-content: space-between;
  }

  .container-fluid {
    margin-top: 56px;
    padding: 0px;
  }

  code,
  pre {
    background-color: #ccc;
    padding: 0 3px;
    border-radius: 5px;
  }

  .bottom {
    justify-self: bottom;
  }
</style>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-sm-12">
      <div class="sidebar">
        {{!-- <p class="text-center">image goes here</p> --}}
        <img src="{{image}}" alt="user image" width="150" height="150">
        <h6><u><b>Profile:</b></u></h6>
        <h3><a id="username">{{username}}</a></h3>
        <hr>
        <h6><u><b>Description:</b></u></h6>
         <a id="description">{{description}}</a>
        <hr>
        <h6>Friends count</h6>
        <hr>
        <h6>Friends online</h6>
        <hr>

        <div class="game-search">
          <form>
            <div class="form-group">
              <label for="game-search"><h6>Search for game</h6></label>
              <input type="input" class="form-control" id="game-search" aria-describedby="game-search"
                placeholder="Enter game name">
            </div>
            <button type="submit" id="search-btn" class="btn btn-primary">Search</button>
          </form>
          <p></p>
        </div>
      </div>
    </div>
    <div class="col-md-8 col-sm-12">
        {{!-- <br><br><br> --}}
        <div id="search-results">
        </div>

      <br>
      <div id="games">{{username}}'s games</div>
      <div id="games2" class="row justify-content-start">
        {{#each games}}
          {{!-- #Chris- Add stuff here --}}
          {{this.name}}
          {{this.image}}
          <hr>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<script src="/js/index.js"></script>